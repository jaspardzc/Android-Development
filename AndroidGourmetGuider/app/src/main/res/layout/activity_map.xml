<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mypersonalapp.androidgourmetguider.MapActivity"
    android:id="@+id/map_layout"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/map_sublayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <EditText
            android:id="@+id/edit_diameter"
            android:hint="Diameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
        <Button
            android:id="@+id/button_set"
            android:text="Set"
            android:textSize="20sp"
            android:textAllCaps="@bool/abc_action_bar_embed_tabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
        <Spinner
            android:id="@+id/spinner_placeType"
            android:layout_width="116dp"
            android:layout_height="44dp"/>
        <Button
            android:id="@+id/button_find"
            android:text="Find"
            android:textAllCaps="@bool/abc_action_bar_embed_tabs"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
    </LinearLayout>

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:name="com.google.android.gms.maps.MapFragment"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#80000000" >

        <RadioButton
            android:id="@+id/radio_normal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Normal"
            android:textSize="20sp"
            android:textStyle="italic"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:background="#cccccc"
            android:textColor="#000000"
            android:layout_margin="2dp"/>

        <RadioButton
            android:id="@+id/radio_terrain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="Terrian"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_weight="1"
            android:background="#cccccc"
            android:textColor="#000000"
            android:layout_margin="2dp"/>

        <RadioButton
            android:id="@+id/radio_satellite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="Satellite"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_weight="1"
            android:background="#cccccc"
            android:textColor="#000000"
            android:layout_margin="2dp"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1">
    <EditText
        android:id="@+id/edit_destination"
        android:hint="Type Destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"/>
    <Button
        android:id="@+id/button_dstConfirm"
        android:text="Find"
        android:textSize="20sp"
        android:textAllCaps="@bool/abc_action_bar_embed_tabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@android:drawable/ic_menu_directions"
        android:layout_weight="0.2"/>
    <Button
       android:id="@+id/button_returnLocation"
       android:text="Return"
       android:textAllCaps="@bool/abc_action_bar_embed_tabs"
       android:textSize="20sp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:drawableRight="@android:drawable/ic_media_rew"
       android:layout_weight="0.2"/>
    </LinearLayout>
</LinearLayout>
