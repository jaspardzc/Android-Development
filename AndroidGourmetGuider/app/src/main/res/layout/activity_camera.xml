<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.mypersonalapp.androidgourmetguider.CameraActivity">

    <LinearLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"/>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:weightSum="1">
        <Button
            android:id="@+id/button_ChangeCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch Camera"
            android:layout_marginTop="30dp"
            android:drawableRight="@android:drawable/ic_popup_sync"
            android:layout_weight="0.17" />
        <Button
            android:id="@+id/button_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capture"
            android:drawableRight="@android:drawable/ic_menu_camera"
            android:layout_marginTop="50dp"/>

        <Button
            android:id="@+id/button_return"
            android:layout_marginTop="50dp"
            android:text="Return"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@android:drawable/ic_media_rew"/>
    </LinearLayout>
</LinearLayout>
