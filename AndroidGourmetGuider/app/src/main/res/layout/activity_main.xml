<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/main_layout"
    android:background="@drawable/blur2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_margin="5dp"
        android:weightSum="1">

    <EditText
        android:id="@+id/edit_message"
        android:hint="Type message here..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <ImageButton
        android:id="@+id/button_search"
        android:background="@drawable/ic_search_default"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.20" />
    <ImageButton
        android:id="@+id/button_voice"
        android:background="@drawable/ic_voice_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.20" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_margin="5dp">

    <ImageView
        android:id="@+id/image_preview"
        android:hint="Image Preview Here"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_margin="5dp">

    <Button
        android:id="@+id/button_camera"
        android:text="Camera"
        android:textSize="20sp"
        android:textAllCaps="@bool/abc_action_bar_embed_tabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@android:drawable/ic_menu_camera"
        android:layout_weight="0.33"/>
    <Button
        android:id="@+id/button_fileUpLoader"
        android:text="Open"
        android:textSize="20sp"
        android:textAllCaps="@bool/abc_action_bar_embed_tabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@android:drawable/ic_input_get"
        android:layout_weight="0.33" />
    <Button
        android:id="@+id/button_updatePreview"
        android:text="Preview"
        android:textAllCaps="@bool/abc_action_bar_embed_tabs"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.33"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:weightSum="1"
        android:layout_margin="5dp">

    <EditText
        android:id="@+id/edit_emailAddress"
        android:hint="Email Address Here.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"/>
    <Button
        android:id="@+id/button_sendEmail"
        android:text="Send"
        android:textAllCaps="@bool/abc_action_bar_embed_tabs"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@android:drawable/ic_dialog_email"
        android:layout_weight="0.2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        android:weightSum="1"
        android:layout_margin="5dp"
        android:orientation="horizontal">

    <Button
        android:id="@+id/button_history"
        android:text="History"
        android:textAllCaps="@bool/abc_action_bar_embed_tabs"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@android:drawable/ic_menu_view"
        android:layout_weight="0.5"/>
    <Button
        android:id="@+id/button_imageProcess"
        android:text="Image Process"
        android:textAllCaps="@bool/abc_action_bar_embed_tabs"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@android:drawable/ic_menu_gallery"
        android:layout_weight="0.5"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_margin="5dp">
    <Button
        android:id="@+id/button_aboutMe"
        android:text="About Me"
        android:textAllCaps="@bool/abc_action_bar_embed_tabs"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#888888"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
</LinearLayout>
